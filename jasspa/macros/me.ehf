    lsundo(2m)lmundo(2m)le, lsnarrow(2m)lmnarrow(2m)le, lsauto(2m)lmauto(2m)le, lscr(2m)lmcr(2m)le, lsctrlz(2m)lmctrlz(2m)le, lslf(2m)lmlf(2m)le,
