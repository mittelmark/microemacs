    lsOperating ModeslmOperating Modesle, lsauto(2m)lmauto(2m)le, lscr(2m)lmcr(2m)le, lsctrlz(2m)lmctrlz(2m)le, lssave-buffer(2)lmsave-buffer(2)le,
