    ls%xfind-com(5)lm%xfind-com(5)le, ls%xgrep-com(5)lm%xgrep-com(5)le, lsadd-next-line(2)lmadd-next-line(2)le, lscompile(3)lmcompile(3)le. find(1),
    lsxfind(3)lmxfind(3)le, lsget-next-line(2)lmget-next-line(2)le, grep(1).
