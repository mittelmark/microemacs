    lsnext-window-find-buffer(2)lmnext-window-find-buffer(2)le, lsnext-window-find-file(2)lmnext-window-find-file(2)le, lsset-position(2)lmset-position(2)le,
    lsgoto-position(2)lmgoto-position(2)le, ls$window-flags(5)lm$window-flags(5)le.
