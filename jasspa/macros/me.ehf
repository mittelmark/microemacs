    ls$MEINSTALLPATH(5)lm$MEINSTALLPATH(5)le, ls$MENAME(5)lm$MENAME(5)le, ls$MEPATH(5)lm$MEPATH(5)le, ls$MEUSERPATH(5)lm$MEUSERPATH(5)le, lsme32.ini(8)lmme32.ini(8)le,
