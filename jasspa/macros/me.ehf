    ls$user-name(5)lm$user-name(5)le, ls$user-path(5)lm$user-path(5)le, ls$MEINSTALLPATH(5)lm$MEINSTALLPATH(5)le, ls$MENAME(5)lm$MENAME(5)le, ls$MENAME(5)lm$MENAME(5)le,
