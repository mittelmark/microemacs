  hilight .hilight.f90 1 "parameter"      .scheme.type
  hilight .hilight.f90 1 "pointer"        .scheme.type
  hilight .hilight.f90 1 "precision"      .scheme.type
  hilight .hilight.f90 1 "radix"          .scheme.type
