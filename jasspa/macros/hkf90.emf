!endif

!if &sin "d" .fhook-f90.setup
  0 indent .hilight.f90 1 10
  indent .hilight.f90    N "program"         t
  indent .hilight.f90    O "end program"    -t
  indent .hilight.f90    N "module"          t
  indent .hilight.f90    S "contains"       -t
  indent .hilight.f90    O "end module"     -t
  indent .hilight.f90    N "function"        t
  indent .hilight.f90    O "end function"   -t
  indent .hilight.f90    N "subroutine"      t
  indent .hilight.f90    O "end subroutine" -t
  indent .hilight.f90    N "type"            t
  indent .hilight.f90    O "end type"       -t
  indent .hilight.f90    N "do"              t
  indent .hilight.f90    O "enddo"          -t
  indent .hilight.f90    O "end do"         -t     
  indent .hilight.f90    N "if"              t
  indent .hilight.f90    S "else"           -t
  indent .hilight.f90    S "else if"        -t
  indent .hilight.f90    S "elseif "        -t     
  indent .hilight.f90    O "end if"         -t
  indent .hilight.f90    O "endif"          -t     
  indent .hilight.f90    N "select case"     t
  indent .hilight.f90    S "case"           -t
  indent .hilight.f90    S "case default"   -t     
  indent .hilight.f90    O "end select"     -t
  indent .hilight.f90    i "!"
!endif

buffer-init-fhook "f90"

