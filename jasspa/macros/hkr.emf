    ; sql stuff
    hilight .hilight.r 1 "dbSendQuery"  .scheme.keyword
    hilight .hilight.r 1 "dbDriver"     .scheme.keyword
    hilight .hilight.r 1 "dbConnect"    .scheme.keyword
    hilight .hilight.r 1 "fetch"        .scheme.keyword
