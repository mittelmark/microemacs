!if &sin "d" .fhook-r.setup
    0 indent  .hilight.r 0 10
    indent .hilight.r n "{"  t
    indent .hilight.r o "}" -t
    indent .hilight.r b "(" ")"
    indent .hilight.r c "\\\\\\s " 3/2t
    indent .hilight.r i "#"
!endif
buffer-init-fhook "r"
