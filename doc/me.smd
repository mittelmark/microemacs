  __osd__ _n_ __0__ _flags_ ["_scheme_"] ["_x-pos_" "_y-pos_"] ["_min-width_" "_min-depth_"
  "_max-wid_" "_max-dep_"] ["_default-button_"] ["_initial-item_"]
  [["title-bar-scheme"] ["Text"]] ["resize-command"] ["control-command"]
